<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    android:id="@+id/card_view"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:padding="@dimen/default_padding"
    card_view:cardCornerRadius="4dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/locationStreetViewIv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxHeight="150dp"
            />

        <TextView
            android:id="@+id/locationNameTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/locationStreetViewIv"
            android:paddingBottom="@dimen/default_padding"
            android:paddingTop="@dimen/default_padding"
            android:text="Place Name"
            android:textSize="25sp"/>

        <TextView
            android:id="@+id/card_view_place_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/locationNameTv"
            android:gravity="left|center"
            android:paddingTop="@dimen/default_padding"
            android:text="Place Address"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/card_view_distance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/card_view_place_address"
            android:paddingTop="@dimen/default_padding"
            android:text="x mi"/>

        <TextView
            android:id="@+id/card_view_item_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/card_view_distance"
            android:paddingTop="@dimen/default_padding"
            android:text="Rating: "
            android:textSize="18sp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/card_view_distance"
            android:layout_toRightOf="@id/card_view_item_rating"
            android:background="@drawable/rating_star_icon"
            android:paddingTop="@dimen/default_padding"
            />


        <TextView
            android:id="@+id/locationNotesTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/card_view_item_rating"
            android:paddingBottom="@dimen/default_padding"
            android:paddingTop="@dimen/default_padding"
            android:text="some comment about the place"/>

        <ImageView
            android:id="@+id/card_view_visited_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/locationNotesTv"
            android:button="@drawable/checkbox_icon"
            android:paddingTop="@dimen/default_padding"/>

        <TextView
            android:id="@+id/card_view_visited_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/default_padding"
            android:layout_below="@+id/locationNotesTv"
            android:layout_toRightOf="@+id/card_view_visited_checkbox"
            android:textSize="18sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/default_padding"
            android:layout_below="@+id/card_view_visited_tv">

            <Button
                android:id="@+id/card_view_edit_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Edit"/>


            <Button
                android:id="@+id/card_view_show_on_map_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_toRightOf="@id/card_view_edit_button"
                android:text="Show on Map"/>
        </LinearLayout>




        <ImageView
            android:id="@+id/card_category_color_indicator"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:paddingTop="@dimen/default_padding"
            android:layout_alignParentBottom="true"
            android:background="@color/colorAccent"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>